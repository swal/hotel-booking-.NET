@model IEnumerable<TravelApplicationNET.Models.HotelInfo>

@{
    ViewBag.Title = "FreeHotels";
}

<h2>@ViewBag.Message</h2>

@if (Model.Count() == 0)
{
    <p>No hotels with free rooms in the given period.</p>
}
else
{
<table>
    <tr>
        <th></th>
        <th>
            Hotel name
        </th>
        <th>
            Address
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink("Create booking", "CreateBooking", new { hotelName = item.HotelName })@* |
            @Html.ActionLink("Rooms", "Rooms", new { hotelName = item.HotelName })*@
        </td>
        <td>
            @item.HotelName
        </td>
        <td>
            @item.Address.Street  @item.Address.Number<br />
            @item.Address.PostalCode  @item.Address.City.ToUpper()<br />
            @item.Address.Country
        </td>
    </tr>
}

</table>
}

